{
    "manifest_version": 3,
    "name": "ChatCMD",
    "version": "1.0",
    "action": {
        "default_icon": "terminals.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background.service_worker": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "notifications",
        "activeTab"
    ]
}